{
    "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./types",
      "target": "ES6",
      "module": "ES6",
      "allowJs": true,
      "moduleResolution": "node",  // Try "nodenext" if "node" doesn't work
      "esModuleInterop": true
    },
    "include": ["src/**/*.js"],
    "exclude": ["types"]
  }