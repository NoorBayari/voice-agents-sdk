{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "composite": true,
    "types": ["jest", "node", "@types/jest"]
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "types"],
  "references": []
}
